{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noUselessElse": "warn",
        "noNonNullAssertion": "warn"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      }
    },
    "ignore": [
      "./tsconfig.json",
      "./pnpm-lock.yaml",
      "./package.json",
      "./node_modules/",
      "./out/",
      "./release",
      "./README.md",
      "./biome.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "lineEnding": "crlf",
    "indentStyle": "space",
    "indentWidth": 2,
    "ignore": [
      "./tsconfig.json",
      "./pnpm-lock.yaml",
      "./package.json",
      "./node_modules/",
      "./out/",
      "./release",
      "./README.md",
      "./biome.json"
    ]
  }
}
